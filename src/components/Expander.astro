---
interface Props {
  summary: string;
}

const { summary } = Astro.props;
---

<details class="group">
  <summary
    class={`
      flex cursor-pointer items-center gap-1.5 font-semibold text-gray-800
      select-none
      dark:text-gray-100
    `}
  >
    <svg
      class={`
        inline h-4 w-4 rotate-270 text-gray-500
        group-open:rotate-0
        dark:text-gray-300
      `}
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        strokeLinecap="round"
        strokeLinejoin="round"
        strokeWidth="2"
        d="M19 9l-7 7-7-7"></path>
    </svg>
    <span>
      {summary}
    </span>
  </summary>
  <div
    class={`
      mt-2 text-gray-700
      dark:text-gray-300
    `}
  >
    <slot />
  </div>
</details>
