---
import "../styles/global.css";

import CommonHead from "../components/CommonHead.astro";

const { title, isPost = false } = Astro.props;
---

<!doctype html>
<html transition:name="root" transition:animate="none" lang="en">
  <head>
    <CommonHead {title} {isPost} />
  </head>

  <slot />
</html>
