---
import { Image } from "astro:assets";

import favicon from "@public/favicon.png";

const { pad } = Astro.props;
---

<style>
  .masky {
    mask-image: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.9),
      rgba(0, 0, 0, 0.7)
    );
    mask-repeat: no-repeat;
    mask-size: cover;
  }
</style>

<header
  class={`
    border-b border-black/20 bg-[#f8f0eb]/92
    dark:border-white/20 dark:bg-black/85
  `}
  {/*
    sticky top-0
    z-50
    supports-[backdrop-filter]:bg-transparent
    supports-[backdrop-filter]:dark:mix-blend-plus-lighter
    supports-[backdrop-filter]:backdrop-blur-md
    supports-[backdrop-filter]:dark:backdrop-brightness-80
  */}
>
  <div
    class={`
      ${pad}
      py-4
    `}
  >
    <a href="/" class="masky flex items-center gap-2 no-underline">
      <Image src={favicon} alt="favicon" height="16" class="fade-in" />
      <span>tekno world</span>
    </a>
  </div>
</header>
