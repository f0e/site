---
interface Props {
  summary: string;
}

const { summary } = Astro.props;
---

<details class="group">
  <summary
    class="flex gap-1.5 items-center
    cursor-pointer
    select-none
    font-semibold text-gray-800 dark:text-gray-100"
  >
    <svg
      class="w-4 h-4 inline rotate-270 group-open:rotate-0 text-gray-500 dark:text-gray-300"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M19 9l-7 7-7-7"></path>
    </svg>
    <span>
      {summary}
    </span>
  </summary>
  <div class="mt-2 text-gray-700 dark:text-gray-300">
    <slot />
  </div>
</details>
